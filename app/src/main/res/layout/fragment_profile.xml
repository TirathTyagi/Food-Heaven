<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment"
    android:background="@color/app_background">
    <ImageView
        android:id="@+id/imgProfileIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_profile_icon"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/txtProfileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/imgProfileIcon"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/txtProfilePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/txtProfileName"
        android:layout_marginTop="15dp"
        android:padding = "10dp"
        android:text="+91-7011584132"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/txtProfileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/txtProfilePhone"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:text="Email Address"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/txtProfileAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/txtProfileEmail"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:text="Delivery Address"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"/>
</RelativeLayout>